
@{
    ViewBag.Title = "Редактирование района";
}

@model Domain.Data.Area

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EditArea", "Area", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(p => p.Id)
                <div class="form-group">
                    @Html.LabelFor(p => p.Title)
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Title)
                </div>
                <button class="btn btn-success" type="submit">Добавить</button>
            }
        </div>
    </div>
</div>
